<div class="container">
<h1>Add your new posts</h1>
<%= form_for :post,  url: posts_path do |f| %>
    <p>
        <%= f.label :title %><br>
        <%= f.text_field(:title ,{:class => 'form-control'}) %>
    </p>

    <p>
        <%= f.label :body %> <br>
        <%= f.text_area(:body ,{:class => 'form-control'}) %>
    </p>

    <p>
        <%= f.submit({:class => 'btn btn-primary'}) %>
    </p>
<% end %>
</div>